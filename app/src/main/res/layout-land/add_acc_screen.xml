<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    android:weightSum="13">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/institution"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="none"
            />
        <EditText
            android:id="@+id/add_acc_institution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:hint="@string/institution"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="text"
            android:importantForAutofill="no"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/type"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="none"
            />
        <EditText
            android:id="@+id/add_acc_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:hint="@string/type"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="text"
            android:importantForAutofill="no"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="none"
            />
        <EditText
            android:id="@+id/add_acc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:hint="@string/name"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="text"
            android:importantForAutofill="no"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/balance"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="none"
            />
        <EditText
            android:id="@+id/add_acc_bal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:hint="@string/balance"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding=".5dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/btn_add_acc_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/btn_add_acc_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:textSize="25sp"
                />

        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>

